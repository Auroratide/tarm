---
import Page from './page.astro'
import ResourceBanner from '../components/ResourceBanner.astro'
import Article from '../components/Article.astro'
import authors from '../authors.json'
import { themes } from '../theme'

const { content } = Astro.props

const author = authors[content.author]
const theme = themes[content.topic]
---

<Page title={content.title} theme={theme}>
    <Article>
        <ResourceBanner title={content.title} author={author} resourceUrl={content.resourceUrl} />
        <slot></slot>
    </Article>
</Page>

<style>
    .resource-info {
        display: grid;
        grid-template-columns: auto 1fr;
        font-size: var(--font-sz-venus);
        padding-left: var(--sp-st-s);
        border-left: var(--sp-st-be) solid var(--c-neutral);
    }

    .resource-info dt {
        font-weight: bold;
    }

    .resource-info dt::after {
        content: ':';
    }
</style>