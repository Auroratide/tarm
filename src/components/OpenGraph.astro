---
const {
    title = 'The Archive of Random Material',
    image = `${Astro.site.href}icons/512.png`,
    url = Astro.canonicalURL.href,
    article,
} = Astro.props

const type = article !== undefined ? 'article' : 'website'
---

<meta property="og:site_name" content="The Archive of Random Material" />
<meta property="og:title" content={title} />
<meta property="og:image" content={image} />
<meta property="og:url" content={url} />
<meta property="og:type" content={type} />
{article !== undefined && <>
    <meta property="og:article:published_time" content={article.published} />
    <meta property="og:article:author" content={article.author} />
    <meta property="og:article:section" content={article.section} />
    {article.tags.map(tag => (
        <meta property="og:article:tag" content={tag} />
    ))}
</>}
